<% layout("layouts/boilerplate") %>
<div class="row">
  <div class="col-8" offset-2>
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings">
      <div class="mb-3">
      <label for="listingTitle" class="form-label">Title:</label>
      <input name="listing[title]" placeholder="enter title" type="text" class="form-control" />
      </div>
  
      <div class="mb-3">
      <label for="listingDescription" class="form-label">Description:</label>
        <textarea
        name="listing[description]"
        class="form-control"
      ></textarea>
      </div>

      <div class="mb-3">
        <label for="listingImage" class="form-label" >Image URL:</label>
      <input
        name="listing[image]"
        placeholder="enter image URL/Link"
        type="text"
        class="form-control"
      />
      </div>


      <div class="row">
        <div class="mb-3 col-md-4" >
      <div class="mb-3">
        <label for="listingPrice" class="form-label">Price:</label>
        <input name="listing[price]" placeholder="enter price" type="number"  class="form-control" />
      </div>
      </div>
<div class="mb-3 col-md-8">
      <div class="mb-3">
        <label for="listingCountry" class="form-label">Country:</label>
        <input name="listing[country]" placeholder="enter country" type="text"   class="form-control" />
      </div>
    </div>
      </div>

      
      
      
      <div class="mb-3">
        <label for="listingLocation" class="form-label">Location:</label>
      <input
        name="listing[location]"
        placeholder="enter location"
        type="text"
        class="form-control"
      />
      </div>
      <button class="btn btn-dark">Add</button>
    </form>
  </div>
</div>
  